<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.zhongmiao.interceptwave</id>
    <name>Intercept Wave</name>
    <vendor>zhongmiao</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
            factoryClass="org.zhongmiao.interceptwave.ui.InterceptWaveToolWindowFactory"
            id="Intercept Wave"
            icon="/icons/interceptWave.svg"
            anchor="right"
            doNotActivateOnStart="false"/>

        <!-- Notification Group -->
        <notificationGroup id="Intercept Wave" displayType="BALLOON"/>

        <!-- Run after project is opened (replacement for deprecated ProjectManagerListener#projectOpened) -->
        <postStartupActivity implementation="org.zhongmiao.interceptwave.startup.ConsoleSubscriberStartupActivity"/>
    </extensions>

    <projectListeners>
        <listener class="org.zhongmiao.interceptwave.listeners.ProjectCloseListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
</idea-plugin>
